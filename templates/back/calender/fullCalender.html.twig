{% extends "back/base.html.twig" %}
{% block title %}
	Calender
{% endblock %}
{% block body %}

	<h1 class='title'>Calendrier de Disponibilit√©</h1>
	<link rel="stylesheet" href="{{ asset('CSS/fullCalender.css') }}"/>
	<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.js" defer></script>

	<div id='calendar'></div>
  
	<script type="text/javascript">
		window.onload = function (events) {
                                            var calendarEl = document.querySelector('#calendar')

                                            var events='{{events}}';
                                            events= events.replace(/(&quot\;)/g,"\"")
                                            var calendar = new FullCalendar.Calendar(calendarEl, {
                                                initialView: 'dayGridMonth',
                                                initialDate: '2022-05-01',
                                                headerToolbar: {
                                                    left: 'prev,next today',
                                                    center: 'title',
                                                    right:''
                                                },
                                                events: JSON.parse(events)
                                            });
                                            
                                            calendar.render();
                                            }
          
	</script>
  
{% endblock %}
