{% extends 'front/base.html.twig' %}

{% block title %}Rechercher
{% endblock %}

{% block body %}

	<h1 class='title'>Bienvenue dans notre System de Reservation
	</h1>
	<div class='main_container'>
		<div class='search-tag'>
			<div class='search-form'>
				<div>


					{{ form_start(form)}}

					{{ form_row(form.CheckInDate)}}

				</div>
				<div>{{ form_row(form.CheckOutDate)}}</div>

				<div>
					{{ form_row(form.NoAdult)}}

				</div>
				<div>
					{{ form_row(form.NoEnfant)}}

				</div>


				<div>{{ form_row(form.CodePromo)}}</div>
				<div>{{ form_row(form.SpecialDemande)}}</div>


				<button class='btn-reserver'>RESERVER</button>
			</div>
			<div class='alertMsg'>
				{{form_errors(form)}}
				{{form_errors(form.CheckInDate)}}
				{{form_errors(form.CheckOutDate)}}
				{{form_errors(form.NoAdult)}}
			</div>
			{{ form_end(form)}}
		</div>
		{% if rooms %}
			<table>


				<table>
					<thead>
						<tr>
							<th>Numero de la chambre</th>
							<th>Etage</th>
							<th>Capacité Maximal</th>
							<th>Type</th>
							<th>Fumeuse ?</th>
							<th>Facilité possible</th>
						</tr>
					</thead>
					{% for room in rooms %}

						<tbody>
							<tr></tr>
							<tr>

								<td>{{ room.getRoomNo() }}</td>


								<td>{{ room.getFloor()  }}</td>


								<td>{{ room.getMaxCapacity }}</td>


								<td>{{ room.getType() }}</td>


								<td>
									{% if room.getIsSmoking() %}
										Oui
									{% else %}
										Non
									{% endif %}
								</td>
								<td>
									{{ room.getFacilityPossible() }}</td>
							</tr>
						</tbody>
					{% endfor %}
				{% endif %}


			</div>
		{% endblock %}
