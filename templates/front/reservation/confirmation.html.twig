{% extends "front/base.html.twig" %}
{% block title %}
	Confirmation
{% endblock %}
{% block javascripts %}
	<link href='../node_modules/fullcalendar-scheduler/main.css' rel='stylesheet'/>
	<script src='../node_modules/fullcalendar-scheduler/main.js'></script>
	<script>
		function call() {
console.log('hi inside the code');
var calendarEl = document.getElementById('calendar');
var calendar = new FullCalendar.Calendar(calendarEl, {
timeZone: 'UTC',
initialView: 'resourceTimelineWeek',
aspectRatio: 1.5,
headerToolbar: {
left: 'prev,next',
center: 'title',
right: 'resourceTimelineDay,resourceTimelineWeek,resourceTimelineMonth'
},
editable: true,
resourceAreaHeaderContent: 'Rooms',
resources: [
{
id: 'a',
title: 'Room 1'
}, {
id: 'b',
title: 'Room 2'
}
],
events: 'https://fullcalendar.io/api/demo-feeds/events.json?single-day&for-resource-timeline'
});

calendar.render();
}
	</script>
{% endblock %}
{% block body %}
	{# <button class="btn-primary" onclick="call()">
																																																					click</button> #}
	<div id='calendar'></div>
	<h1 class='title'>Votre reservation est confirmé</h1>
	<h2 class='title'>
		Un email de confirmation viens d'etre addresser sur votre adresse mail.</h2>

	<hr>
	<h2 class='title'>Récapitulative</h2>
	<p class='title'>
		Reservation ID :-
		{{  reservation.getID() }}<br>
		Date d'arrivée: -
		{{ reservation.getCheckInDate() | date('Y-m-d')}}<br>


		Date de depart:-
		{{ reservation.getCheckOutDate()| date('Y-m-d') }}<br>


		{% for r in room %}
			Installation possible:-
			{{ r.getFacilityPossible() }}<br>
			-
			{% if r.getIsSmoking()	%}fumeuse
			{% else %}
				non fumeuse
			{% endif %}<br>
			-Etage:
			{{ r.getFloor()	}}<br>
			<a href="{{ path('reservation_update', {id : reservation.getID()}) }}">
				<input class='btn-reserver' type="button" value="MODIFIER">
			</a>
			<a href="{{ path('reservation_cancel', {id : reservation.getID()}) }}">
				<input class='btn-reserver' type="button" value="ANNULER">
			</a>
			<hr>
			<h1 class='title'>A tres bientot !!!</h1>
		{% endfor %}

	</p>


{% endblock %}
