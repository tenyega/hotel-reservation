{% extends "front/base.html.twig" %}
{% block title %}
	Confirmation
{% endblock %}
{% block javascripts %}


	<link href='../node_modules/fullcalendar-scheduler/main.css' rel='stylesheet'/>
	<script src='../node_modules/fullcalendar-scheduler/main.js'></script>
	<script>
		function call() {
console.log('hi inside the code');
var calendarEl = document.getElementById('calendar');
var calendar = new FullCalendar.Calendar(calendarEl, {
timeZone: 'UTC',
initialView: 'resourceTimelineWeek',
aspectRatio: 1.5,
headerToolbar: {
left: 'prev,next',
center: 'title',
right: 'resourceTimelineDay,resourceTimelineWeek,resourceTimelineMonth'
},
editable: true,
resourceAreaHeaderContent: 'Rooms',
resources: [
{
id: 'a',
title: 'Room 1'
}, {
id: 'b',
title: 'Room 2'
}
],
events: 'https://fullcalendar.io/api/demo-feeds/events.json?single-day&for-resource-timeline'
});

calendar.render();
}
	</script>

{% endblock %}
{% block body %}

	{# <button class="btn-primary" onclick="call()">
																																																													click</button> #}
	<div id='calendar'></div>
	<h1 class='title'>Votre reservation est confirmé</h1>
	<h2 class='title'>
		Un email de confirmation viens d'etre addresser sur votre adresse mail.</h2>

	<hr>
	<h2 class='title'>Récapitulative</h2>

	Réservé pour
	{{ app.user.getFirstName() | upper }}


	<div style="display:flex; justify-content: space-evenly;">

		<div class='title'>
			<hr>
			<h3 class="title" style='padding-top:10px'>
				<strong>Reservé le :-</strong>
				{{ reservation.getBookingDate()| date('Y-m-d') }}<br>
				<b>Date d'arrivée:-
				</b>
				{{ reservation.getCheckInDate()| date('Y-m-d') }}
				<br>
				<b>Date de depart:-
				</b>
				{{ reservation.getCheckOutDate()| date('Y-m-d') }}</h3>
			Nombre des Personnes :-
			{{ reservation.getNoAdult() }}<br>
			{% if reservation.getNoEnfant() %}
				Nombre des Enfants :-

				{{ reservation.getNoEnfant() }}<br>
			{% endif %}
			Demande Speciale  :-
			{{ reservation.getSpecialDemande() }}<br><br>


			{% for r in room %}

				{{ r.getType() }}
				({{ r.getBedding() }}
				)<br><br></div>
			<div class='title'>
				<h5 class='description'>Details de la Chambre :-<br><br>{{ r.getDescription() }}<br><br>
					Possible options :-
					{{ r.getFacilityPossible() }}<br><br></h5>

			{% endfor %}

			<hr style='    margin-top: -90px;'>
			<b>Total :-
				{{ reservation.getTotal() /100 }}&euro;</b>
			<br>

			<hr>
			<a href="{{ path('reservation_update', {id : reservation.getID()}) }}">
				<input class='btn-reserver' type="button" value="MODIFIER">
			</a>
			<a href="{{ path('reservation_cancel', {id : reservation.getID()}) }}">
				<input class='btn-reserver' type="button" value="ANNULER">
			</a>
			<a href="{{ path('front_feedback') }}">
				<input class='btn-reserver' type="button" value="DONNER UN AVIS">
			</a>
			<a href="{{ path('front_map') }}">
				<input class='btn-reserver' type="button" value="Retrouvez nous sur google map">
			</a>

		</div>
	</div>


{% endblock %}
