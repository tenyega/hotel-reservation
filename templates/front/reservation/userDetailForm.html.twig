{% extends "front/base.html.twig" %}
{% block title %}
	User Details
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="{{ asset('CSS/feedback.css') }}"/>
	<link rel="stylesheet" href="{{ asset('CSS/_navbar.css') }}"/>

	<h1 class='title'>Vos informations important !
	</h1>
	<div class="spacer"></div>
	<div class='container'>
		<div class='form_input'>
			<div class='form'>

				<div>
					<div class='form-container'>
						<div class='user_form'>
							<div>
								{{ form_start(form)}}
								<div class='form_row'>


									{{ form_row(form.firstName)}}

								</div>
								<div class='form_row'>{{ form_row(form.lastName)}}</div>

								<div class='form_row'>
									{{ form_row(form.phone)}}

								</div>

								<div class='form_row'>{{ form_row(form.email)}}</div>
								<div class='form_row'>{{ form_row(form.password)}}</div>
							</div>
							<div>

								<div class='form_row'>{{ form_row(form.address)}}</div>
								<button class='btn-confirmer' type='submit'>Confirmer mes coordon√©es</button>

							</div>
						</div>


					</div>


				</div>
				<div class='error-msg'>
					{{form_errors(form)}}
					{{form_errors(form.firstName)}}
					{{form_errors(form.lastName)}}
					{{form_errors(form.phone)}}
					{{form_errors(form.email)}}
					{{form_errors(form.address)}}
				</div>
				{{ form_end(form)}}
			</div>
		</div>
	</div>

{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('CSS/userDetailForm.css') }}"/>

{% endblock %}
