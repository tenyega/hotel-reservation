{% extends "front/base.html.twig" %}
{% block title %}
	Modification
{% endblock %}
{% block body %}

	<h1 class='title'>
		Recapitulative</h1>
	<div class='recap'>
		<div class='recap_details1'>
			<hr>
			<h1 class='title'>
				Nouvelle Reservation</h1>
			<p class='title'>

				Date d'arrivée: -
				<b>{{ reservation.getCheckInDate() | date('Y-m-d')}}</b><br>


				Date de depart:-
				<b>{{ reservation.getCheckOutDate()| date('Y-m-d') }}</b><br>

				Charges Total:-
				<b>{{ reservation.getTotal()/100 }}&euro;</b><br>

				{% for r in room %}
					Installation possible:-
					{{ r.getFacilityPossible() }}<br>
					-
					{% if r.getIsSmoking()	%}fumeuse
					{% else %}
						non fumeuse
					{% endif %}<br>


				{% endfor %}

			</p>
		</div>

		<div class='recap_details2'>
			<hr>
			<h1 class='title'>
				Reservation Avant</h1>
			<p class='title'>


				Date d'arrivée: -
				<b>{{ oldResa.getCheckInDate() | date('Y-m-d')}}</b><br>


				Date de depart:-
				<b>{{ oldResa.getCheckOutDate()| date('Y-m-d') }}</b><br>

				Charges Total:-
				<b>{{ oldResa.getTotal()/100 }}&euro;</b><br>

				{% for r in room %}
					Installation possible:-
					{{ r.getFacilityPossible() }}<br>
					-
					{% if r.getIsSmoking()	%}fumeuse
					{% else %}
						non fumeuse
					{% endif %}<br>


				{% endfor %}

			</p>
		</div>

		<div class='ihm_btn'>
			<a href="{{ path('reservation_payment', {resaID : resaID, reservation: reservation, diffTotal: diffTotal } ) }}">
				<input class='btn-reserver' type="button" name='btn_confirmer' value="Confirmer">
			</a><br>
			<a href="{{ path('reservation_cancel', {id : resaID} ) }}">
				<input class='btn-reserver' type="button" value="Annuler la Réservation">
			</a><br>
			
		</div>
	</div>


{% endblock %}
